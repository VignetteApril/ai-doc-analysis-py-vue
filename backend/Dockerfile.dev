# 使用官方 Python 轻量版
FROM python:3.10.13-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
WORKDIR /app

# 1. 彻底切换至清华大学 HTTPS 镜像源 (比 HTTP 更稳定)
RUN sed -i 's/deb.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources && \
    sed -i 's/security.debian.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apt/sources.list.d/debian.sources

# 2. 注入激进的 APT 配置：强制使用 HTTPS、增加重试次数、延长超时
RUN echo 'Acquire::Retries "20";' > /etc/apt/apt.conf.d/80-retries && \
    echo 'Acquire::http::Timeout "600";' >> /etc/apt/apt.conf.d/80-retries && \
    echo 'Acquire::https::Timeout "600";' >> /etc/apt/apt.conf.d/80-retries

# 3. 关键：将安装逻辑包裹在一个简单的重试脚本里
# 如果 apt 下载因为 502 失败，它会自动重新尝试，直到成功或达到 5 次
RUN for i in {1..5}; do \
    apt-get update && apt-get install -y --no-install-recommends --fix-missing \
    build-essential \
    libpq-dev \
    curl \
    libreoffice-writer-nogui \
    libreoffice-calc-nogui \
    fonts-wqy-zenhei && \
    break || sleep 10; \
    done && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# 4. Python 依赖也切到清华源
COPY requirements.txt .
RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

RUN mkdir -p /app/uploads
EXPOSE 8000